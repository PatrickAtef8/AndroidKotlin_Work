<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.datetimeapp.MainActivity">

<TextView
android:id="@+id/dateTimeTextView"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Press button to get date and time"
android:textSize="18sp"
app:layout_constraintBottom_toTopOf="@id/getTimeButton"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

<Button
android:id="@+id/getTimeButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Get Date and Time"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/dateTimeTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>